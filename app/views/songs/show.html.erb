<div class="page-header">
  <%= link_to songs_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_song_path(@song), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show song</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @song.name %></dd>

  <dt>Length:</dt>
  <dd><%= @song.length %></dd>

  <dt>Album:</dt>
  <dd><%= link_to @song.album.name, album_path(@song.album) %></dd>

  <dt>Artist:</dt>
  <dd><%= link_to @song.album.artist.name, artist_path(@song.album) %></dd>

</dl>
